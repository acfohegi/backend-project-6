extends ../layouts/application.pug

block header
  h1= t('layouts.application.labels')

block content
  a.btn.btn-primary(href=`labels/new`)= t('buttons.createLabel')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th= t('views.labels.actions')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            div.d-flex
              a.btn.btn-primary(href=`labels/${label.id}/edit`)= t('buttons.edit')
              +buttonTo(`/labels/${label.id}`, 'delete')(class="btn btn-danger ms-2" value=t('buttons.delete'))

